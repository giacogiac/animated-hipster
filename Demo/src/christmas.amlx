						}
					}
				}
			}
			actions {
				DigitalAction {
					bState OFF
					actuator GreenLight
				},
				DigitalAction {
					bState ON
					actuator RedLight
				},
				DigitalAction {
					bState OFF
					actuator AlarmSignal
				}
			}
		},
		State Alarm {
			transitions{
				Transition{
					goto Green
					conditions{
						DigitalSensorCondition {
							bState OFF
							sensor AlarmButton
						},
						TimeCondition{
							time 300
							tComp >
						}
					}
				},
				Transition{
					goto Red
					conditions{
						DigitalSensorCondition {
							bState ON
							sensor AlarmButton
						},
						TimeCondition{
							time 300
							tComp >
						}
					}
				}
			}
			actions {
				DigitalAction {
					bState OFF
					actuator GreenLight
				},
				DigitalAction {
					bState OFF
					actuator RedLight
				},
				DigitalAction {
					bState ON
					actuator AlarmSignal
				}
			}
		}
	}
